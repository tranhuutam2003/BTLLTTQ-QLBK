@model TestWeb.Models.Books

<h1>Confirm Delete</h1>
<h4>Are you sure you want to delete this book?</h4>
<div>
    <strong>Title:</strong> @Model.Title <br />
    <strong>Author:</strong> @Model.Author <br />
    <strong>Publisher:</strong> @Model.Publisher <br />
    <strong>Published Date:</strong> @Model.PublishedDate <br />
    <strong>Price:</strong> @Model.Price <br />
    <strong>Stock Quantity:</strong> @Model.StockQuantity <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Category:</strong> @Model.Category.CategoryName <br />
</div>

<form asp-action="DeleteBook" method="post">
    <input type="hidden" name="id" value="@Model.BookID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>