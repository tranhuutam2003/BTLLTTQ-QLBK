@{
    Layout = "~/Views/Cart/CartLayout.cshtml";
     
}
@using System.Globalization
<h2>Your Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>
                        <div width="100" class="featured__item__pic set-bg" data-setbg="@Url.Content("~/img/products/" + @item.Book.ImageURL)">
                            <!-- Đây là chỗ sử dụng hình nền cho sản phẩm -->
                        </div>
                    <td>@item.Book.Price.ToString("C", new CultureInfo("vi-VN"))</td>
                    <td>
                        <button class="btn btn-danger" onclick="updateQuantity(@item.Book.BookID, 'decrease')">-</button>
                        <span id="quantity-@item.Book.BookID">@item.Quantity</span>
                        <button class="btn btn-primary" onclick="updateQuantity(@item.Book.BookID, 'increase')">+</button>
                    </td>
                    <td id="price-@item.Book.BookID" data-price="@item.Book.Price">@item.Book.Price.ToString("C", new CultureInfo("vi-VN"))</td>
                    <td id="total-@item.Book.BookID">@((item.Quantity * item.Book.Price).ToString("C", new CultureInfo("vi-VN")))</td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="confirmRemove('@item.Book?.Title', @item.CartItemID)">Remove</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Total: <span id="cart-total">@Model.TotalAmount.ToString("C", new CultureInfo("vi-VN"))</span></h3>
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function updateQuantity(bookId, action) {
            const url = action === 'increase' ? '@Url.Action("IncreaseQuantity")' : '@Url.Action("DecreaseQuantity")';
            $.ajax({
                type: "POST",
                url: url,
                data: { bookId: bookId },
                success: function (response) {
                    if (response.success) {
                        // Cập nhật số lượng sản phẩm
                        let quantity = parseInt($('#quantity-' + bookId).text());
                        $('#quantity-' + bookId).text(action === 'increase' ? quantity + 1 : quantity - 1);

                        // Cập nhật tổng tiền cho sản phẩm này
                        const price = parseFloat($('#price-' + bookId).data('price'));
                        const newTotal = price * (action === 'increase' ? quantity + 1 : quantity - 1);
                        $('#total-' + bookId).text(newTotal.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }));

                        // Gọi AJAX để cập nhật lại tổng tiền giỏ hàng
                        updateCartTotal();
                    } else {
                        window.location.href = response.redirectUrl;
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra. Vui lòng thử lại.');
                }
            });
        }

        function updateCartTotal() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetTotalAmount")',
                success: function (response) {
                    $('#cart-total').text(response.totalAmount);
                },
                error: function () {
                    alert('Không thể cập nhật tổng tiền giỏ hàng.');
                }
            });
        }
    </script>
}

<script>
    function confirmRemove(productName, cartItemId) {
        if (confirm("Bạn có chắc muốn xóa sản phẩm '" + productName + "' khỏi giỏ hàng không?")) {
            // Gửi yêu cầu xóa đến controller
            window.location.href = '/Cart/RemoveFromCart?cartItemId=' + cartItemId;
        }
    }
</script>
