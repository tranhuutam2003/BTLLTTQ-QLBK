@{
    Layout = "~/Views/Cart/CartLayout.cshtml";
     
}

<h2>Giỏ hàng</h2>

@if (Model.Items.Count == 0)
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Hình ảnh</th> <!-- Thêm hình ảnh -->
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>
                        <div width="100" class="featured__item__pic set-bg" data-setbg="@Url.Content("~/img/products/" + @item.Book.ImageURL)">
                            <!-- Đây là chỗ sử dụng hình nền cho sản phẩm -->
                        </div>
                    <td>@item.Book.Price</td>
                    <td>
                        <button class="btn btn-danger" onclick="updateQuantity(@item.Book.BookID, 'decrease')">-</button>
                        <span id="quantity-@item.Book.BookID">@item.Quantity</span>
                        <button class="btn btn-primary" onclick="updateQuantity(@item.Book.BookID, 'increase')">+</button>
                    </td>
                    <td>@(item.Quantity * item.Book.Price)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-bookId="@item.Book.BookID" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Tổng: @Model.TotalAmount</h3>
}
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function updateQuantity(bookId, action) {
            const url = action === 'increase' ? '@Url.Action("IncreaseQuantity")' : '@Url.Action("DecreaseQuantity")';
            $.ajax({
                type: "POST",
                url: url,
                data: { bookId: bookId },
                success: function (response) {
                    if (response.success) {
                        if (action === 'increase') {
                            let quantity = parseInt($('#quantity-' + bookId).text());
                            $('#quantity-' + bookId).text(quantity + 1);
                        } else {
                            let quantity = parseInt($('#quantity-' + bookId).text());
                            if (quantity > 1) {
                                $('#quantity-' + bookId).text(quantity - 1);
                            } else {
                                $('#item-' + bookId).remove();
                            }
                        }
                    } else {
                        window.location.href = response.redirectUrl;
                    }
                },
                error: function () {
                    alert('Có lỗi xảy ra. Vui lòng thử lại.');
                }
            });
        }
    </script>
}