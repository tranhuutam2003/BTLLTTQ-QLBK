 @using System.Globalization

 @model TestWeb.Models.Cart

<h2>Giỏ hàng</h2>

@if (Model.Items.Count == 0)
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sách</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.Price</td>

                    <td>
                        <form method="post" asp-action="DecreaseQuantity" asp-route-bookId="@item.Book.BookID" style="display:inline;">
                            <button type="submit" class="btn btn-danger">-</button>
                        </form>
                        @item.Quantity
                        <form method="post" asp-action="IncreaseQuantity" asp-route-bookId="@item.Book.BookID" style="display:inline;">
                            <button type="submit" class="btn btn-primary">+</button>
                        </form>
                        
                       
                    </td>
                    <td>@(item.Quantity * item.Book.Price)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-bookId="@item.Book.BookID" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Tổng: @Model.TotalAmount</h3>
}
