@{
    ViewData["Title"] = "SanPhamTheoLoai";
    Layout = "~/Views/Product/ProductLayout.cshtml";
}
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TestWeb.Models.Books>

<div class="container">
    <!-- Thêm container -->
    <div id="product-container">
        @await Html.PartialAsync("_ProductList", Model)
    </div>
</div>

<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLoai", new { maloai = ViewBag.maloai, page }))
</div>
