@{
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

@model IEnumerable<TestWeb.Models.Order>

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Trạng thái</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="OrderConfirmation" asp-route-orderId="@order.OrderID">Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>
