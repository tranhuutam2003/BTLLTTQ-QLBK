@{
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

@model IEnumerable<TestWeb.Models.Order>

<h2>Order List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Total Amount (VND)</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.TotalAmount.ToString("N0")</td> <!-- Format as currency in VND -->

                <td>
                    <a asp-action="OrderConfirmation" asp-route-orderId="@order.OrderID">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>